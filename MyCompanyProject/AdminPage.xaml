<Window x:Class="MyCompanyProject.AdminPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyCompanyProject"
        mc:Ignorable="d"
        Title="AdminPage" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Welcome In Admin Page🤓🥳" 
                   FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center"
                   FontWeight="Bold" FontStyle="Italic"/>
        <DataGrid Grid.Row="1" x:Name="data" Width="600" Height="300" AutoGenerateColumns="True" />
        <Grid Grid.Row="2" Margin="20" >
            <Button Content="Add Employee" Width="250" Height="50" VerticalAlignment="Bottom"  Margin="-40"/>
        </Grid>

    </Grid>
</Window>
